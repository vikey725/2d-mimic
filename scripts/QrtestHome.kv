<QrtestHome>:
    BoxLayout:
        orientation: "vertical"
        id: uibox

        BoxLayout:
            orientation: "horizontal"
            id: titlebar
            size_hint: 1, 0.20

            Label:
                id: label_about
                size_hint: 0.70,1
                text: 'Also Me'
                italic: 1
                halign: 'left'
                valign: 'middle'
                font_size: self.size[1] * 0.50
                # https://www.w3.org/TR/SVG11/types.html#ColorKeywords
                #color: .8,.9,0,1

            BoxLayout:
                orientation: "vertical"
                id: statsbar
                size_hint: 0.30, 1

                Label:
                    id: fps
                    size_hint: 1,0.5
                    text: 'fps: '

                Label:
                    id: latency
                    size_hint: 1,0.5
                    text: 'latency: '


        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.7

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.33,1
                Label:
                    text: 'Original Camera'
                    size_hint: 1,0.2

                OriginalCamera:
                    id: orig_camera
                    size_hint: 1,0.8

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.33,1

                Label:
                    text: 'Also Me Camera'
                    size_hint: 1,0.2

                KivyCamera:
                    id: qrcam
                    size_hint: 1,0.8

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.33,1

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1,0.25
                    Label:
                        text: 'Avatar Status'

                    Switch:
                        id: switch
                        disabled: True

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1,0.25

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1,0.25
                    Label:
                        text: "Style"

                    Spinner:
                        id: spinner_outtype
                        text: '0'
                        values: '0', '1'

                BoxLayout:
                    orientation: "horizontal"
                    size_hint: 1,0.25

                    Label:
                        text: "Background Image"

                    Spinner:
                        id: spinner_backimage
                        text: '0'
                        values: '0', '1'

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.1

            Button:
                id: butt_start
                text: "start"
                size_hint: 0.4,1
                on_press: root.dostart()

            Button:
                id: butt_exit
                text: "quit"
                size_hint: 0.4,1
                on_press: root.doexit()

